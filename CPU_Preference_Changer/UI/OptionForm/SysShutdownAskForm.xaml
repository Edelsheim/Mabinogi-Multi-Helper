<Window x:Class="CPU_Preference_Changer.UI.OptionForm.SysShutdownAskForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CPU_Preference_Changer.UI.OptionForm"
        mc:Ignorable="d"
        Title="확인" Height="250" Width="600" WindowStartupLocation="CenterScreen" Topmost="True" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" FontWeight="Bold" VerticalAlignment="Center" FontSize="25">1분 후 시스템이 자동으로 종료됩니다.</Label>
        <Label Grid.Row="1" FontWeight="Bold" VerticalAlignment="Center" FontSize="25">정말 종료하시겠습니까?</Label>
        <StackPanel Grid.Row="2" HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Width="180" x:Name="bt_Yes" Click="bt_Yes_Click" FontSize="25">예(즉시 종료)</Button>
            <Button Margin="10 0 0 0" Width="180" x:Name="bt_No" Click="bt_No_Click" FontSize="25">취소</Button>
        </StackPanel>
    </Grid>
</Window>
